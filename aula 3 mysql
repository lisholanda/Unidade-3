 #criar tabela
 create table aluno(
 idaluno int primary key auto_increment,
 nome varchar(30) not null,
 idade int not null,
 sexo enum ("m","f") not null, 
 email varchar (30)
 );
 #descreve os dados de uma tabela
 desc aluno
 
 #inserir dados na tabela de aluno
